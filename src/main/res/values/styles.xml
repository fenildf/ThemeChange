<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="BlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/blue_window_bg</item>
        <item name="text_color">@android:color/white</item>
        <item name="primary_color">@color/blue_primary_color</item>
        <item name="item_bg">@color/blue_item_bg</item>
    </style>

    <style name="OrangeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/orange_window_bg</item>
        <item name="text_color">@android:color/white</item>
        <item name="primary_color">@color/orange_primary_color</item>
        <item name="item_bg">@color/orange_item_bg</item>
    </style>
</resources>